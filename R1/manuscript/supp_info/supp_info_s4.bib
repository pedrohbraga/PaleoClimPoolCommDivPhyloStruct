
@article{sandelInfluenceLateQuaternary2011,
  title = {The {{Influence}} of {{Late Quaternary Climate-Change Velocity}} on {{Species Endemism}}},
  author = {Sandel, B. and Arge, L. and Dalsgaard, B. and Davies, R. G. and Gaston, K. J. and Sutherland, W. J. and Svenning, J.-C.},
